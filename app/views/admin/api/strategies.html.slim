#strategies-grid ui-grid='strategiesGrid'
.loading-stub ng-show='loadingItems'

script type='text/ng-template' id='strategyModal.html'
  form name='strategyForm' ng-submit='ok()'
    .modal-header
      h3.modal-title Strategy
    .modal-body
      .form-group.required
        label Name
        input.form-control [ng-model='item.name' required]
      .form-group.required
        label Leverage
        input.form-control [type='number' ng-model='item.leverage' required
          string-to-number]
      .form-group.required
        label Tool
        select.form-control [ng-model='item.tool_id'
        ng-options='t.id as t.name for t in callbacks.tools']
      .form-group
        label Portfolio
        select.form-control [ng-model='item.portfolio_strategy_id'
        ng-options='p.id as p.name for p in callbacks.portfolioStrategies']
    = render partial: 'modal_buttons', locals: { form_name: 'strategyForm' }
